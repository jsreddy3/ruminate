# API Keys (required)
OPENAI_API_KEY=your_openai_key_here
DATALAB_API_KEY=your_datalab_key_here
GEMINI_API_KEY=your_gemini_key_here

# Storage Settings
DOCUMENT_STORAGE_TYPE=sqlite  # Use sqlite for document storage
FILE_STORAGE_TYPE=s3          # Use s3 for file storage
STORAGE_DIR=local_storage     # Only used if FILE_STORAGE_TYPE=local
DB_PATH=sqlite.db            # SQLite database path

# S3 Settings (required when FILE_STORAGE_TYPE=s3)
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_SECRET_KEY=your_aws_secret_key_here
S3_BUCKET=your_s3_bucket_name_here
